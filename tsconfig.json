{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "strict": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "esm": true
  },
  "include": ["src/**/*.ts", "src/index.ts"],
  "exclude": ["node_modules", "dist", "__test__"]
}
